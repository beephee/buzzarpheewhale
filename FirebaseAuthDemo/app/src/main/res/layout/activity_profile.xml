<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bgGray"
    tools:context="com.example.android.firebaseauthdemo.ProfileActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_launcher"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_marginTop="15dp"
                android:text="DaBao4Me"
                android:fontFamily="casual"
                android:textStyle="bold"
                android:textSize="48sp"
                android:id="@+id/textView" />
        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="email-placeholder"
            android:fontFamily="sans-serif-condensed"
            android:textStyle="bold"
            android:id="@+id/textViewUserEmail"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="What would you like to do today?\n"
            android:fontFamily="sans-serif-condensed"
            android:textStyle="bold"
            android:id="@+id/textViewWelcomeMessage"
            android:layout_gravity="center_horizontal" />

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/buyer_description"
            android:id="@+id/buttonBuyerDashboard"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center_horizontal"
            android:onClick="viewBuyerPage"/>

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/courier_description"
            android:id="@+id/buttonCourierDashboard"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center_horizontal"

            android:onClick="viewCourierPage"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonLogout"
            android:background="@drawable/menumapbutton"
            android:text="LOG OUT"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>

</RelativeLayout>
