<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgGreen"
    android:orientation="vertical"
    tools:context="com.example.android.firebaseauthdemo.AddRequestActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/settingsTop"
        android:text="Settings"
        android:textAllCaps="true"
        android:fontFamily="casual"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_gravity="center_horizontal" />

    <!-- Content Container -->

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottomNaviBarSettings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:itemBackground="@color/black"
        app:itemIconTint="@drawable/navicolour"
        app:itemTextColor="@drawable/navicolour"
        app:menu="@menu/bottomnavi" />

    </RelativeLayout>