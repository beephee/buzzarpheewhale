<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgBlue"
    tools:context="com.example.android.firebaseauthdemo.BuyerActivity">

    <TextView
        android:id="@+id/textViewMyRequests"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewBuyerDashboard"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="My Current Requests"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:fontFamily="casual"
        android:textSize="20sp"/>

    <ListView
        android:id="@+id/listViewProducts"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomNaviBarBuyer"
        android:layout_below="@id/textViewMyRequests"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/customborder"/>

        <Button
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:id="@+id/buttonNewListing"
            android:text="Add New Request"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:onClick="viewAddRequest"
            android:background="@drawable/buyerroundedbutton"
            android:layout_below="@+id/listViewProducts"
            android:layout_centerHorizontal="true"/>

    <!-- Content Container -->

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottomNaviBarBuyer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:itemBackground="@color/black"
        app:itemIconTint="@drawable/navicolour"
        app:itemTextColor="@drawable/navicolour"
        app:menu="@menu/bottomnavi" />


</RelativeLayout>