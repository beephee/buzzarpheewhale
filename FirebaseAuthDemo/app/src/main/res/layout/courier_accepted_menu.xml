<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/dialog_bg">

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/cancelOrderButton"
        android:layout_centerHorizontal="true"
        android:text="Cancel Order"
        android:textSize="20sp"
        />

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/confirmPaymentButton"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/cancelOrderButton"
        android:text="Confirm Payment Receipt"
        android:textSize="20sp" />

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/transitButton"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/confirmPaymentButton"
        android:text="Product In Transit"
        android:textSize="20sp" />

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/courierCompleteTransact"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/transitButton"
        android:text="Complete Transaction"
        android:textSize="20sp" />


</RelativeLayout>